#
# General patterns to exclude everywhere
#
syntax:regexp
# List of banned changesets
(^|/)\.hgban

# Eclipse project settings folders
(^|/)\.settings/

# Log folders
(^|/)log/

# staging folders for the installer
(^|/)staging/

# Maven build folder
(^|/)target/

# Eclipse classpath settings
(^|/)\.classpath$

# Eclipse metadata
(^|/)\.metadata/

# Eclipse project settings
(^|/)\.project$

# IntelliJ .iml files
(^|/).+\.iml$

# IntelliJ .idea folder
(^|/)\.idea/

# Backup files
(^|/).+\.bak$

# Database files
(^|/).+\.db$

# Log files
(^|/).+\.log$

# Pom versionBackups
(^|/).*pom.xml.versionsBackup$

# Old files
(^|/).+\.old$
(^|/).+\.orig$